<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/textResult1"
        android:text="0"
        android:textSize="35dp"
        android:inputType="numberDecimal"
        android:background="#D5D5D5"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textResult1"
        android:layout_centerHorizontal="true"
        android:background="#ff8888"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/butEquals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="="
                android:onClick="solve"
                android:layout_weight="1"
                android:background="#0066CC"
                android:textSize="30dp"
                />


            <Button
                android:id="@+id/but1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0066CC"
                android:text="1"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/but4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="4"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/but7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="7"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/butMult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF0000"
                android:text="*"
                android:layout_weight="1"
                android:textSize="25dp"/>


            <Button
                android:id="@+id/butDiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF0000"
                android:text="/"
                android:layout_weight="1"
                android:textSize="25dp"/>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/butClr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clr"
                android:layout_weight="1"
                android:background="#FFFFFF"/>


            <Button
                android:id="@+id/but2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="2"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/but5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="5"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/but8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="8"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/but0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="0"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/butDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:layout_weight="1"
                android:background="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/butDot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF0000"
                android:text="."
                android:layout_weight="1"
                android:textSize="25dp"/>


            <Button
                android:id="@+id/but3"
                android:layout_width="match_parent"
                android:background="#FF0000"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/but6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="6"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/but9"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/butSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0066CC"
                android:text="+"
                android:layout_weight="1"
                android:textSize="25dp"/>


            <Button
                android:id="@+id/butSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0066CC"
                android:text="_"
                android:textSize="30dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
